<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= business.shopName %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Welcome to <%= business.shopName %></h1>
    <div>
        <h2>About Us</h2>
        <p><%= business.description %></p>
    </div>
    <div>
        <h2>Find Us At</h2>
        <p><%= business.location %></p>
    </div>

    <div>
        <h2>Customer Reviews</h2>
        <ul>
            <% business.reviewers.forEach(function(reviewer) { %>
                <li><strong><%= reviewer.name %>:</strong> <%= reviewer.review %></li>
            <% }); %>
        </ul>
    </div>

    <div>
        <h2>Contact Information</h2>
        <p>Phone: <%= business.contacts.phone %></p>
        <p>Email: <%= business.contacts.email %></p>
    </div>
</body>
</html>
